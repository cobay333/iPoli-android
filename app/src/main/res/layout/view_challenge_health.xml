<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="4dp"
    android:layout_marginEnd="8dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="16dp"
    android:clickable="true"
    android:focusable="true"
    android:foreground="?attr/selectableItemBackgroundBorderless"
    app:cardCornerRadius="6dp"
    app:cardElevation="6dp">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/healthBg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/challenge_category_health_bg" />

        <TextView
            android:id="@+id/healthDesc"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:text="@string/challenge_category_health_description"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/md_light_text_70"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="@id/guideline10" />

        <android.support.constraint.Guideline
            android:id="@+id/guideline10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.56" />

        <TextView
            android:id="@+id/healthName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="8dp"
            android:layout_marginEnd="16dp"
            android:layout_marginStart="8dp"
            android:text="@string/challenge_category_health_name"
            android:textAlignment="viewEnd"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/md_white"
            app:layout_constraintBottom_toTopOf="@+id/healthDesc"
            app:layout_constraintEnd_toEndOf="@+id/healthBg"
            app:layout_constraintStart_toStartOf="@+id/guideline10" />

        <ImageView
            android:id="@+id/healthPet"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:layout_marginStart="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toTopOf="@+id/guidelinePetBottom"
            app:layout_constraintEnd_toEndOf="@+id/healthImage"
            app:layout_constraintStart_toStartOf="@+id/healthImage"
            app:layout_constraintTop_toBottomOf="@+id/guidelinePetTop"
            app:srcCompat="@drawable/challenge_category_pet_13" />

        <ImageView
            android:id="@+id/healthImage"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_marginEnd="8dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            app:layout_constraintBottom_toTopOf="@+id/guidelineBottom"
            app:layout_constraintEnd_toEndOf="@id/healthBg"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="@id/healthBg"
            app:layout_constraintTop_toBottomOf="@+id/guidelineTop"
            app:srcCompat="@drawable/challenge_category_health_image" />

        <View
            android:id="@+id/guidelineTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/healthBg"
            app:layout_constraintEnd_toEndOf="@+id/healthBg"
            app:layout_constraintStart_toStartOf="@+id/healthBg"
            app:layout_constraintTop_toTopOf="@+id/healthBg"
            app:layout_constraintVertical_bias="0.50" />

        <View
            android:id="@+id/guidelinePetTop"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/healthBg"
            app:layout_constraintEnd_toEndOf="@+id/healthBg"
            app:layout_constraintStart_toStartOf="@+id/healthBg"
            app:layout_constraintTop_toTopOf="@+id/healthBg"
            app:layout_constraintVertical_bias="0.21" />

        <View
            android:id="@+id/guidelinePetBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_constraintBottom_toBottomOf="@+id/healthBg"
            app:layout_constraintEnd_toEndOf="@+id/healthBg"
            app:layout_constraintStart_toStartOf="@+id/healthBg"
            app:layout_constraintTop_toTopOf="@+id/healthBg"
            app:layout_constraintVertical_bias="0.72" />

        <View
            android:id="@+id/guidelineBottom"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="@+id/healthBg"
            app:layout_constraintEnd_toEndOf="@+id/healthBg"
            app:layout_constraintStart_toStartOf="@+id/healthBg"
            app:layout_constraintTop_toTopOf="@+id/healthBg"
            app:layout_constraintVertical_bias="1.0" />


    </android.support.constraint.ConstraintLayout>
</android.support.v7.widget.CardView>